
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="6dp"
        >

        <FrameLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/teal_700">

            <TextView
                android:id="@+id/textViewNarrativesRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:elevation="8dp"
                android:fontFamily="sans-serif-black"
                android:text="NARRATIVES"
                android:textSize="40sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="25dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="7dp">

                    <TextView
                        android:id="@+id/textViewRecomendados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="65dp"
                        android:layout_marginBottom="5dp"
                        android:text="Recomendados"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewRecomendados"
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:scrollbars="horizontal"
                        android:background="@color/teal_clarito"
                        />

                    <TextView
                        android:id="@+id/textViewGenero1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Género 1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewGenero1"
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:scrollbars="horizontal"
                        android:background="@color/teal_clarito"
                        />

                    <TextView
                        android:id="@+id/textViewGenero2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Género 2"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewGenero2"
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:scrollbars="horizontal"
                        android:background="@color/teal_clarito"
                        />

                    <TextView
                        android:id="@+id/textViewGenero3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Género 3"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewGenero3"
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:scrollbars="horizontal"
                        android:background="@color/teal_clarito"
                        />

                    <TextView
                        android:id="@+id/textViewGenero4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Género 4"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewGenero4"
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:scrollbars="horizontal"
                        android:background="@color/teal_clarito"
                        />

                    <TextView
                        android:id="@+id/textViewGenero5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:text="Género 5"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewGenero5"
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:scrollbars="horizontal"
                        android:background="@color/teal_clarito"
                        />

                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBotones"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/teal_500"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout"
        android:elevation="7dp"
        >

        <TextView
            android:id="@+id/textViewCentroMenuInferiorHomeSinRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/botonIrLoginDesdeInicio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:outlineAmbientShadowColor="@color/transparente"
            android:outlineSpotShadowColor="@color/transparente"
            android:text="Inicia Sesión"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:rippleColor="@color/teal_700" />

        <Button
            android:id="@+id/botonIrRegistroDesdeInicio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:outlineAmbientShadowColor="@color/transparente"
            android:outlineSpotShadowColor="@color/transparente"
            android:text="Registrate"
            android:textColor="@color/teal_blanco"
            android:textSize="15sp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutCargandoNarratives"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="8dp"
        >

        <ImageView
            android:id="@+id/imageViewLogoCargandoNarratives"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/narratives_limpio"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="10dp"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
