<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentAmigos">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botonSolicitudesEnviadasAmigos"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/botonSolicitudesRecibidasAmigos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/teal_casi_blanco"
        android:drawableTop="@drawable/icono_soli_enviadas"
        android:drawableTint="@color/teal_700"
        app:cornerRadius="8dp"
        app:strokeColor="@color/teal_claro"
        app:strokeWidth="2dp"
        android:textAllCaps="false"
        android:text="Enviados"
        android:textSize="14sp"
        android:textColor="@color/teal_700"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botonSolicitudesRecibidasAmigos"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/botonSolicitudesEnviadasAmigos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/teal_casi_blanco"
        android:drawableTop="@drawable/icono_inbox"
        android:drawableTint="@color/teal_700"
        app:cornerRadius="8dp"
        app:strokeColor="@color/teal_claro"
        app:strokeWidth="2dp"
        android:textAllCaps="false"
        android:text="Recibidos"
        android:textSize="14sp"
        android:textColor="@color/teal_700"
        />

    <EditText
        android:id="@+id/editTextBuscadorListaAmigos"

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:layout_marginHorizontal="30dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonSolicitudesRecibidasAmigos"
        android:hint="Buscar amigos..."
        android:textColorHint="@color/gris_claro"

        android:drawableStart="@drawable/icono_lupa"
        android:backgroundTint="@color/teal_claro"
        />

    <ListView
        android:id="@+id/listViewListaAmigos"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBuscadorListaAmigos"

        app:layout_constraintVertical_bias="0.05"

        android:paddingBottom="320dp"
        android:clipToPadding="false"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

