<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout"
        android:backgroundTint="@color/teal_700">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="85dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSeguirEscuchando"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginBottom="5dp"
                    android:text="Recomendados"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewSeguirEscuchando"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:scrollbars="horizontal"
                    android:background="@color/teal_clarito"
                    />

                <TextView
                    android:id="@+id/textViewGenero1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Género 1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewGenero1"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:scrollbars="horizontal"
                    android:background="@color/teal_clarito"
                    />

                <TextView
                    android:id="@+id/textViewGenero2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Género 2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewGenero2"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:scrollbars="horizontal"
                    android:background="@color/teal_clarito"
                    />

                <TextView
                    android:id="@+id/textViewGenero3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Género 3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewGenero3"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:scrollbars="horizontal"
                    android:background="@color/teal_clarito"
                    />

                <TextView
                    android:id="@+id/textViewGenero4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Género 4"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewGenero4"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:scrollbars="horizontal"
                    android:background="@color/teal_clarito"
                    />

                <TextView
                    android:id="@+id/textViewGenero5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Género 5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewGenero5"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:scrollbars="horizontal"
                    android:background="@color/teal_clarito"
                    />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
