<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout"
        android:backgroundTint="@color/teal_700"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/SeguirEscucandoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seguir escuchando"
                    android:layout_marginTop="85dp"
                    />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    tools:ignore="SpeakableTextPresentCheck">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageViewSeguirEscuchando1"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icono_imagen_estandar_foreground" />

                            <TextView
                                android:id="@+id/textViewSeguirEscuchando1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9.0" />

                        </LinearLayout>

                        <Space
                            android:layout_width="20dp"
                            android:layout_height="3dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageViewSeguirEscuchando2"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icono_imagen_estandar_foreground" />

                            <TextView
                                android:id="@+id/textViewSeguirEscuchando2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="7.5" />
                        </LinearLayout>

                        <Space
                            android:layout_width="20dp"
                            android:layout_height="3dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageViewSeguirEscuchando3"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icono_imagen_estandar_foreground" />

                            <TextView
                                android:id="@+id/textViewSeguirEscuchando3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="7.5" />
                        </LinearLayout>

                        <Space
                            android:layout_width="20dp"
                            android:layout_height="3dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageViewSeguirEscuchando4"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icono_imagen_estandar_foreground" />

                            <TextView
                                android:id="@+id/textViewSeguirEscuchando4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="7.5" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

