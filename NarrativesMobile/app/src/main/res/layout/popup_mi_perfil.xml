<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageViewFondoExteriorInfoLibro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gris_trans"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutMiPerfil"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/popup_redondo_background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewMiPerfilTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-black"
            android:text="Mi Perfil"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/botonCerrarMiPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/icono_cruz_cerrar"
            android:text="@string/cerrar_popup"
            app:borderWidth="0dp"
            app:elevation="0.01dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:maxImageSize="30dp"
            app:tint="@color/gris" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewMiPerfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.20"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            android:src="@mipmap/icono_imagen_estandar"/>

        <TextView
            android:id="@+id/textViewTituloNombreUsuarioMiPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="12dp"
            android:text="Nombre de usuario:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewMiPerfil"
            />

        <TextView
            android:id="@+id/textViewRealNombreUsuarioMiPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="USUARIO"
            android:fontFamily="sans-serif-black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTituloNombreUsuarioMiPerfil"
            />

        <TextView
            android:id="@+id/textViewTituloCorreoElectronicoMiPerfil"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="12dp"
            android:text="Correo electrónico:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRealNombreUsuarioMiPerfil"
            />

        <TextView
            android:id="@+id/textViewRealCorreoElectronicoMiPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="CORREO ELECTRÓNICO"
            android:fontFamily="sans-serif-black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTituloCorreoElectronicoMiPerfil"
            />


        <TextView
            android:id="@+id/textViewCambiarContrasenaMiPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Cambiar contraseña"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonMisColeccionesMiPerfil"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="@color/teal_casi_blanco"
            android:drawableTop="@drawable/icono_colecciones"
            android:drawablePadding="0dp"
            android:paddingHorizontal="0dp"
            android:paddingTop="7dp"
            android:text="Mis\ncolecciones"
            android:textAllCaps="false"
            android:textColor="@color/teal_700"
            android:textSize="10.5sp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewCambiarContrasenaMiPerfil"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRealCorreoElectronicoMiPerfil"
            app:layout_constraintVertical_bias="0.526"
            app:strokeColor="@color/teal_200"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonMisMarcapaginasMiPerfil"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="@color/teal_casi_blanco"
            android:drawableTop="@drawable/icono_marcapaginas"
            android:drawablePadding="0dp"
            android:paddingHorizontal="0dp"
            android:paddingTop="7dp"
            android:text="Mis\nmarcapaginas"
            android:textAllCaps="false"
            android:textColor="@color/teal_700"
            android:textSize="10.5sp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewCambiarContrasenaMiPerfil"
            app:layout_constraintEnd_toStartOf="@+id/botonMisColeccionesMiPerfil"

            app:layout_constraintHorizontal_bias="0.709"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRealCorreoElectronicoMiPerfil"
            app:layout_constraintVertical_bias="0.526"
            app:strokeColor="@color/teal_200"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonMisResenasMiPerfil"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="@color/teal_casi_blanco"
            android:drawableTop="@drawable/icono_resenas"
            android:drawablePadding="0dp"
            android:paddingHorizontal="0dp"
            android:paddingTop="7dp"
            android:text="Mis\nreseñas"
            android:textAllCaps="false"
            android:textColor="@color/teal_700"
            android:textSize="10.5sp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewCambiarContrasenaMiPerfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"

            app:layout_constraintStart_toEndOf="@+id/botonMisColeccionesMiPerfil"
            app:layout_constraintTop_toBottomOf="@+id/textViewRealCorreoElectronicoMiPerfil"
            app:strokeColor="@color/teal_200"
            app:strokeWidth="2dp" />




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>