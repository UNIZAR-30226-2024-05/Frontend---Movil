<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_trans"
    >


    <RelativeLayout
        android:id="@+id/layoutMiPerfil"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/mi_perfil_background"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="-545dp"
            android:layout_marginEnd="1dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/botonCerrarMiPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"


                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/icono_cruz_cerrar"
                android:text="@string/cerrar_popup"
                app:borderWidth="0dp"
                app:elevation="0.01dp"
                app:maxImageSize="30dp"
                app:tint="@color/gris" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-black"
                android:text="Mi Perfil"
                android:textSize="25dp" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>