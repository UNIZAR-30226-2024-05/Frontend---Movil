<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/imageViewFotoAnadirAmigo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/botonVolverDesdeAnadirAmigo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="2dp"
        android:padding="5dp"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNombreAnadirUsuario"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@+id/imageViewFotoAnadirAmigo"
        android:layout_centerVertical="true"
        android:textColor="@color/gris"
        android:textSize="18sp"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonCancelarSoli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/icono_cruz_cancelar"
        android:text="@string/volver_atras"
        app:backgroundTint="@color/teal_claro"
        app:borderWidth="0dp"
        app:elevation="0.01dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="40dp"
        app:tint="@color/teal_700" />

</RelativeLayout>